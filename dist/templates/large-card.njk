<a href="{{ cardUrl }}" class="products__link large-card">
    <figure class="large-card__container">
    <img src="{{ cardImgPath }}" class="large-card__img">

    <figcaption class="large-card__descr-wrap">
    <h3 class="small-card__title large-card__title">
    {{ cardTitle }}
</h3>
<span class="small-card__descr large-card__descr">
    {{ cardDescr }}
</span>
<span class="small-card__price large-card__price--large">
    {{ cardPrice }}
</span>
</figcaption>
</figure>
</a>
